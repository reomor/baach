<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="reomor">

        <createTable tableName="user" remarks="user entities">
            <column name="id" type="int">
                <constraints unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="password_hash" type="varchar(255)"/>
            <column name="password_salt" type="varchar(255)"/>
        </createTable>
        <addAutoIncrement tableName="user" columnName="id" columnDataType="int" startWith="1" incrementBy="1"/>

        <createTable tableName="user_roles" remarks="user entities">
            <column name="user_id" type="int"/>
            <column name="role" type="varchar(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_roles" baseColumnNames="user_id"
                                 constraintName="user_id_fk"
                                 referencedTableName="user" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>